COLOUR00="#E7E8EB"
set -g status-bg colour0
set -g message-bg colour0
set -g message-fg colour1
set -g message-command-fg colour4
set -g message-command-bg colour4
set -g status-justify "left"
set -g status-left-length "100"
set -g status "on"
set -g status-right-length "100"
set -g status-right-attr "none"
set -g status-attr "none"
set -g pane-border-fg colour0
set -g status-left-attr "none"
setw -g window-status-fg colour5
setw -g window-status-attr "none"
setw -g window-status-activity-bg colour0
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg colour5
setw -g window-status-separator ""
setw -g window-status-bg colour0

set -g status-left "#[bg="colour0",fg="colour2" #S #[bg="colour2",fg="colour0",bold,nounderscore,noitalics]"

set -g status-right "#[fg="colour3", bg="colour0"]  %Y-%m-%d  %I:%M:%S #[fg="colour1",bg="colour0",bold,nounderscore,noitalics]#[fg="colour0",bg="colour1",italics,bold] #h "

setw -g window-status-format "#[fg="colour2",bg="colour0"] #I #[fg="colour2",bg="colour0"] #W "

setw -g window-status-current-format "#[fg="colour0",bg="colour2",nobold,nounderscore,noitalics]#[fg="colour0",bg="colour2"] #I #[fg="colour0",bg="colour2", nobold,italics] #W #[fg="colour2",bg="colour0",nobold,nounderscore,noitalics]"
